   <script>
        var GS = GS || {};
        GS.remotingConfigEndPoint = '{!$RemoteAction.GSCommonBroker.gsCommonRequestBroker}';
        GS.commonRemotingEndPoint = '{!$RemoteAction.GSCommonBroker.gsCommonRequestBroker}';
        GS.remotingEndPoint = '{!$RemoteAction.AdminBroker.adminRequestBroker}';
        GS.remoting = "{!$RemoteAction.NSRemoting.apinsinvoke}";
        GS.sessionId = "{!NSSessionId}";
        GS.NSSessionId = "{!(NSSessionId)}";
        GS.isPackagedInstance   = (GS.packageNS) ? "true" : "false";
        GS.customLookUpConfig   = fakeEval('{!JSINHTMLENCODE(customLookUpConfigMap)}');
        GS.usageConfigInfo      = fakeEval('{!JSINHTMLENCODE(UsageConfigInfo)}');
    </script>
    
    <apex:outputpanel rendered="{!If(JSINHTMLENCODE($CurrentPage.parameters.env) == null , true, false)}">
        <script>
            function addScript(src) {
                var scrRef = document.createElement('script');
                scrRef.setAttribute('src', src);
                document.body.appendChild(scrRef);
            }

            function addCSS(src) {
                var cssRef = document.createElement("link")
                cssRef.setAttribute("rel", "stylesheet");
                cssRef.setAttribute("type", "text/css");
                cssRef.setAttribute("href", src);
                document.getElementsByTagName("head")[0].appendChild(cssRef);
            }
            if(document.URL.toLowerCase().indexOf("jbcxm") < 0){
                GS.essentialsCDNURL = "https://essentialsui.develgs.com/essentials/";
                
            }else{
                GS.essentialsCDNURL = "https://essentialsui.gainsightapp.net/essentials/";
             
            }
            
            addCSSAndScriptFiles(GS.essentialsCDNURL);

            function addCSSAndScriptFiles(url){
                fetch(url+"manifest.json")
                        .then(function(data) {
                            return data.json()
                        })
                        .then(function(data) {
                            addCSS(url + data["essentials"] + "/essentials/styles/essentials.css");
                            addScript(url + data["essentials"] + "/essentials/scripts/essentials.bundle.js");
                        })
            }
        </script>

    </apex:outputpanel>
    <apex:outputpanel rendered="{!If(JSINHTMLENCODE($CurrentPage.parameters.env) == "dev" , true, false)}">
     <script>   GS.essentialsEnvMode = "dev";</script>
        <script type="text/javascript" src="{!IF(JSINHTMLENCODE($CurrentPage.parameters.apppath)!=null,JSINHTMLENCODE($CurrentPage.parameters.apppath),'https://localhost:7890/UI/essentials')}/scripts/essentials.bundle.js"></script>
        <apex:stylesheet value="{!IF(JSINHTMLENCODE($CurrentPage.parameters.apppath)!=null,JSINHTMLENCODE($CurrentPage.parameters.apppath),'https://localhost:7890/UI/essentials')}/styles/essentials.css" />

